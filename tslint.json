{
  "extends": [
    "tslint:latest",
    "tslint-eslint-rules",
    "tslint-react"
  ],
  "rules": {
    // override tslint-react rules here
    "jsx-no-multiline-js": false,
    "no-submodule-imports": false,
    "no-implicit-dependencies": [true, "dev"],
    "jsx-boolean-value": false,
    "no-shadowed-variable": false
  },
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.ts"
    ]
  }
}